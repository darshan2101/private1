<h1>Roles</h1>

<div id="roles">
<table class="table table-hover text-center" > 
  <thead>
  <tr>
    <th>Name </th>
    <th>Description</th>
    <th colspan=3>Actions</th>
  </tr>
  <tr>
  <th colspan=5></th>
  </tr>
  </thead>
  <tbody>
      <% @roles.each do |role| %>
      <tr>
        <td> <%= role.name %> </td>
        <td> <%= role.description %> </td>
        <td> <%= link_to "Show", role ,class:"btn btn-outline-primary"%></td>
        <td><%= link_to "Edit", edit_role_path(role) ,class:"btn btn-outline-secondary"%></td>
        <td><%= link_to 'Destroy', role, "data-turbo-method": :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-outline-danger"%></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>

<%= link_to "New role", new_role_path ,class:"btn btn-outline-dark" %>
