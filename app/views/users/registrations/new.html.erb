<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="field">
    <strong><%= f.label "First Name" %></strong><br />
    <%= f.text_field :fName %>
  </div>
  <div class="field">
    <strong><%= f.label "Last Name" %></strong><br />
    <%= f.text_field :lName %>
  </div>

  <div class="field">
    <strong><%= f.label :email %></strong><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <strong><%= f.label :password %></strong>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <strong><%= f.label :password_confirmation %></strong><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <strong><%= f.label :contact %></strong><br />
    <%= f.number_field :contact,maximum: 10 %>
  </div>

  <div class="field">
    <strong><%= f.label :gender %></strong><br />
    <%= f.radio_button :gender, 'Male' %> Male 
    <%= f.radio_button :gender, 'Female' %> Female 
    <%= f.radio_button :gender, 'Other' %> Other<br />
  </div>

  <div class="field">
   <strong> <%= f.label :dateOfBirth %></strong><br />
    <%= f.date_field :dateOfBirth  %> <br>
  </div>
  <div class="field">
    <strong><%= f.label "Area of Expertise" %></strong><br />
    <%= f.collection_check_boxes :expertise_ids, Expertise.all, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>
 <fieldset>
        <strong>Address:</strong>
        <%= f.fields_for :addresses do |addresses_form| %>
            <%= render "address_fields", f: addresses_form %>
        <% end %>
        <%= link_to_add_fields "Add Addresses", f, :addresses %>

    </fieldset>
<br>
<br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
